{{#each post as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <span for="img" aria-label="parent">🧑‍🤝‍🧑</span>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}